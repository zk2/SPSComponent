{
  "name": "zk2/sps-component",
  "type": "library",
  "description": "SQL/DQL query builder for Doctrine 2",
  "homepage": "https://github.com/zk2/query-builder",
  "license": "MIT",
  "keywords": [
    "sql",
    "dql",
    "query builder"
  ],
  "authors": [
    {
      "name": "Evgeniy Budanov",
      "email": "budanov.ua@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1,<8.0",
    "ext-pdo": "*",
    "doctrine/orm": "^2.6",
    "doctrine/dbal": "^2.6",
    "doctrine/annotations": "^1.0",
    "doctrine/cache": "^1.6"
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.*",
    "symfony/var-dumper": "4.2.*",
    "cobaia/monologdoctrine": "1.0.*",
    "squizlabs/php_codesniffer": "3.*",
    "escapestudios/symfony2-coding-standard": "3.x-dev"
  },
  "autoload": {
    "psr-4": {
      "Zk2\\SpsComponent\\": "src/"
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "Tests/"
    }
  },
  "scripts": {
    "phpsniffer-cmd": [
      "vendor/squizlabs/php_codesniffer/bin/phpcs --config-set installed_paths vendor/escapestudios/symfony2-coding-standard,src/Standards",
      "vendor/squizlabs/php_codesniffer/bin/phpcs --config-set default_standard App",
      "vendor/squizlabs/php_codesniffer/bin/phpcs --config-set colors 1"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.2.x-dev"
    }
  }
}
